<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movies/edit.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form 
    id="new-form" 
    action="/movies/<%= movie._id %>?_method=PUT" 
    method="POST"
  >
    <label for="title-input">Title:</label>
    <input type="text" value="<%= movie.title %>" name="title" id="title-input">
    <label for="release-year-input">Release Year:</label>
    <input 
      type="text"
      value="<%= movie.releaseYear %>"
      name="releaseYear" 
      id="release-year-input"
    >
    <label for="mpaa-rating-select">MPAA Rating:</label>
    <select name="mpaaRating" id="mpaa-rating-select">
      <option value="<%= movie.mpaaRating %>">
        <%= movie.mpaaRating %>
      </option>
      <option value="G">G</option>
      <option value="PG">PG</option>
      <option value="PG-13">PG-13</option>
      <option value="R">R</option>
    </select>
    <label for="now-showing-checkbox">Now Showing:</label>
    <input 
      <%= movie.nowShowing ? 'checked' : '' %>
      type="checkbox"
      name="nowShowing" 
      id="now-showing-checkbox"
    >
    <button type="submit">Save Movie</button>
  </form>
</main>

<%- include('../partials/footer') %>